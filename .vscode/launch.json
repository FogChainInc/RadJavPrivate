	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Web Server",
			"program": "${workspaceFolder}/html5/index.js", 
			"args": [
				"--http"
			]
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "HTML5 Example Browser",
			"url": "http://127.0.0.1/",
			"webRoot": "${workspaceFolder}", 
			"sourceMaps": true
		}
	]
}