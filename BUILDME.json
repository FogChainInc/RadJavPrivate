{
	"name": "RadJav VM", 
	"version": "0.27.0", 
	"devDependencies": [
		{ "program": "git" }, 
		{ "program": "cmake" }, 
		{ "library": "boost", "version": ">1.66.0", "buildBundle": "fogchain/boost/all" }, 
		{ "library": "v8", "buildBundle": "fogchain/v8/all" }, 
		{ "library": "wxWidgets", "buildBundle": "fogchain/wxwidgets/all", "optional": true }, 
		{ "library": "openssl", "buildBundle": "fogchain/openssl/all", "optional": true }
	], 
	"builds": [
		{
			"name": "RadJav VM Windows", 
			"os": "windows", 
			"specificOS": "windows 10", 
			"arch": "x64", 
			"installers": {
					"packages": [
							"visual_studio_community", 
							"cmake"
						]
				}, 
			"onStart": "./build.js"
		}, 
		{
			"name": "RadJav VM Linux", 
			"os": "linux", 
			"specificOS": "ubuntu 18.04", 
			"arch": "x64", 
			"apt": {
					"packages": [
							"build-essential", 
							"cmake", 
							"libgtk2.0-dev", 
							"libgtk-3-dev", 
							"libwebkitgtk-dev", 
							"libwxgtk3.0-dev", 
							"libogre-1.9-dev"
						]
				}, 
			"testing": {
					"tests": [
						{
							"cmd": "RadJavVM", 
							"args": ["${file}"], 
							"workingDir": "tests/crypto"
						}
					]
				}
		}
	]
}