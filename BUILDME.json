{
	"name": "RadJav VM", 
	"buildBundles": {
			"all": "fogchain/radjav"
		}, 
	"devDependencies": [
		{ "program": "git" }, 
		{ "program": "cmake" }, 
		{ "library": "boost", "version": ">1.66.0", "buildBundle": "fogchain/boost/all" }, 
		{ "library": "v8", "buildBundle": "fogchain/v8/all" }, 
		{ "library": "wxWidgets", "buildBundle": "fogchain/wxwidgets/all", "optional": true }, 
		{ "library": "openssl", "buildBundle": "fogchain/openssl/all", "optional": true }
	], 
	"builds": [
		{
			"name": "RadJav VM Linux", 
			"os": "ubuntu 18.04 x64", 
			"apt": {
					"packages": [
							"libgtk2.0-dev", 
							"libgtk-3-dev", 
							"libwebkitgtk-dev", 
							"libwxgtk3.0-dev", 
							"libogre-1.9-dev"
						]
				}, 
			"testing": {
					"tests": [
						{
							"cmd": "RadJavVM", 
							"args": ["${file}"], 
							"workingDir": "tests/crypto"
						}
					]
				}
		}, 
		{
			"name": "RadJav VM Windows", 
			"os": "windows 18.04 x64", 
			"apt": {
					"packages": [
							"libgtk2.0-dev", 
							"libgtk-3-dev", 
							"libwebkitgtk-dev", 
							"libwxgtk3.0-dev", 
							"libogre-1.9-dev"
						]
				}
		}
	]
}