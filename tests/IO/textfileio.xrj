var io = new RadJav.IO();
var iotext = new RadJav.IO.TextFile();

var tempDir;
var sep;

if (RadJav.OS.type == "windows") {
    tempDir = "c:\\temp";
    sep = "\\";
} else {
    tempDir = "/temp";
    sep = "/";
}

RadJav.Console.println("PROGRAM START - TEXTFILE");

try
{
    RadJav.Console.println("##################### Test 1 ######################################");
    iotext.writeFile(tempDir + sep + "test_file.txt", "This is my test file.", RadJav.IO.TextFile.write);
    var fileExists = io.isFile(tempDir + sep + "test_file.txt");

    if (fileExists == false)
        RadJav.Console.println("Test #1 Failed - Text creation failed");
}
catch (error)
{
    RadJav.Console.println(error);
}

try
{
    RadJav.Console.println("##################### Test 2 ######################################");
    iotext.writeFile(tempDir + sep + "test_file.txt", "This is my test file.", RadJav.IO.TextFile.write);
    var text = iotext.readFile(tempDir + sep + "test_file.txt");

    if (text == "")
        RadJav.Console.println("Test #2 Failed - No data in file/file not found");
}
catch (error)
{
    RadJav.Console.println(error);
}

RadJav.Console.println("PROGRAM COMPLETE - TEXTFILE");
